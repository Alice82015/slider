<Window x:Class="slider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:slider"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="20" Width="400">
            <Canvas Width="400" Height="50" Background="LightCyan">
                <Border CornerRadius="5" Background="#FFFFD0D7" Canvas.Top="0" Canvas.Left="0" x:Name="Height">
                    <TextBlock x:Name="HeightNumber" Width="80" TextAlignment="Center" Padding="0 5">100</TextBlock>
                </Border>
            </Canvas>
            <Slider Minimum="0" Maximum="200" Background="LightCyan" x:Name="HeightSlider" ValueChanged="HeightSlider_ValueChanged" ></Slider>
            <TextBlock x:Name="WeightNumber">100</TextBlock>
            <Slider></Slider>
            <TextBlock>0</TextBlock>

            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="40" x:Name="BmiNumber1">29</TextBlock>
                <TextBlock FontSize="23" Margin="0 7 0 0" x:Name="BmiNumber2">.5</TextBlock>
            </StackPanel>
            
        </StackPanel>
        
    </Grid>
</Window>
